<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    
    <PreferenceCategory
        android:key="basic_info_category"
        android:selectable="false"
        android:title="Changelog">
        
        <!-- crDroid Changelog -->
        <Preference
            android:key="crdroid_changelog"
            android:icon="@drawable/ic_changelog"
            android:title="@string/changelog_crdroid_title"
            android:summary="@string/changelog_crdroid_summary">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.settings"
                android:targetClass="com.crdroid.settings.fragments.about.ChangelogActivity"/>
        </Preference>
        
    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="Developed By">
        
        <Preference
            android:icon="@drawable/ic_abhishek" 
            android:title="Abhishek"
            android:summary="Lead Developer, Founder">
            <intent android:action="android.intent.action.VIEW"
                android:data="https://github.com/JigenxOhtsusuki"/> 
        </Preference>
        
        <Preference
            android:icon="@drawable/ic_manikanta"
            android:title="Manikanta"
            android:summary="Co-Lead, Co-Founder">
            <intent android:action="android.intent.action.VIEW"
                android:data="https://github.com/FenixDecOps"/> 
        </Preference>

        <Preference
            android:icon="@drawable/ic_roshan_ram" 
            android:title="Roshan Ram"
            android:summary="Co-Lead, Co-Founder">
            <intent android:action="android.intent.action.VIEW"
                android:data="https://github.com/RengokuxKyojuro"/>
        </Preference>

        <Preference
            android:icon="@drawable/ic_vishwadika"
            android:title="Vishwadika"
            android:summary="Developer">
        </Preference>

        <Preference
            android:icon="@drawable/ic_kalyani"
            android:title="Kalyani"
            android:summary="Developer">
        </Preference>
        
    </PreferenceCategory>
</PreferenceScreen>
